<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:id="@+id/infoipm">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37425A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        >

        <ImageView
            android:id="@+id/img_infoipm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="ipm2"
            android:src="@drawable/ipm2"
            tools:ignore="OnClick" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dip"
            />

        <TextView
            android:id="@+id/text_infoipm1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="IPM (Indeks Pembangunan Manusia) Kabupaten Madiun tahun 2020 tercatat 71,73 meningkat dibandingkan tahun 2019."
            />

        <TextView
            android:id="@+id/text_infoipm2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text="IPM Kabupaten Madiun menduduki peringkat 18 Se Jawa Timur, IPM Kabupaten Madiun masuk dalam kategori tinggi"/>

        <TextView
            android:id="@+id/text_infoipm3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text=""/>

        <TextView
            android:id="@+id/text_infoipm4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text=""/>

        <TextView
            android:id="@+id/text_infoipm5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text=""/>

        <TextView
            android:id="@+id/text_infoipm6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text=""/>

        <TextView
            android:id="@+id/text_infoipm7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text=""/>


        <View
            android:layout_width="match_parent"
            android:layout_height="100dip"
            />
</LinearLayout>
</ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/background"
        app:menu="@menu/menu_navigation"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>