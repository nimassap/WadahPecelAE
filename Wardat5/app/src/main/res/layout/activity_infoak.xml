<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:id="@+id/infoak">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37425A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        >

        <ImageView
            android:id="@+id/img_ketenagakerjaan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="ketenagakerjaan"
            android:src="@drawable/ketenagakerjaan"
            tools:ignore="OnClick" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dip"
            />

        <TextView
            android:id="@+id/text_infoak1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Berikut indikator ketenagakerjaan tahun 2020 yg dihasilkan oleh BPS Kabupaten Madiun,  indikator ketenagakerjaan ini didapat dari Survei Angkatan Kerja Nasional (SAKERNAS)."
            />

        <TextView
            android:id="@+id/text_infoak2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textColor="@color/white"
            android:text="Pandemi covid 19 berimbas ke segala bidang termasuk ketenagakerjaan."
            />

        <TextView
            android:id="@+id/text_infoak3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textColor="@color/white"
            android:text="Tingkat Partisipasi Angkatan Kerja (TPAK) Kabupaten Madiun tahun 2020 tercatat 71,42 meningkat dibandingkan tahun 2019, namun Tingkat Pengangguran Terbuka (TPT) Kabupaten Madiun tahun 2020 juga mengalami peningkatan."
            />

        <TextView
            android:id="@+id/text_infoak4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textColor="@color/white"
            android:text="TPT Kabupaten Madiun tahun 2020 tercatat 4,8 meningkat dibandingkan tahun 2019 yaitu sebesar 3,52. Artinya peningkatkan jumlah angkatan kerja tidak berbanding lurus dengan lapangan pekerjaan yang ada sehingga mengakibatkan peningkatan pengangguran."
            />

        <TextView
            android:id="@+id/text_infoak5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textColor="@color/white"
            android:text="Pandemi covid-19  mengakibatkan perlambatan ekonomi, tutup atau terhentinya beberapa usaha baik skala menengah maupun kecil dan mikro sampai terjadinya PHK di beberapa perusahaan."
            />

        <TextView
            android:id="@+id/text_infoak6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textColor="@color/white"
            android:text="Semoga pandemi ini segera berakhir agar ketenagakerjaan semakin membaik kedepannya."
            />

        <TextView
            android:id="@+id/text_infoak7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textColor="@color/white"
            android:text=""
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="100dip"
            />

</LinearLayout>
</ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/background"
        app:menu="@menu/menu_navigation"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>