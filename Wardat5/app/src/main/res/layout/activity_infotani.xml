<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:id="@+id/infotani">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37425A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        >

        <ImageView
            android:id="@+id/img_infotani"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="luas_panen"
            android:src="@drawable/luas_panen"
            tools:ignore="OnClick" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dip"
            />

        <TextView
            android:id="@+id/text_infotani1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Produksi padi kabupaten Madiun tahun 2020 tercatat 453,54 Ton GKG** (Gabah Kering Giling) meningkat 8,17 persen dibandingkan tahun 2019."
            />

        <TextView
            android:id="@+id/text_infotani2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text="Luas panen tahun 2020 kabupaten Madiun, tercatat 73,86 ribu hektar meningkat 8,61 persen dibandingkan tahun 2019."/>

        <TextView
            android:id="@+id/text_infotani3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text="Peningkatan luas panen dan produksi padi tahun 2020 ini memperlihatkan sektor pertanian merupakan salah satu sektor yang bertahan dalam masa pandemi ini"/>

        <TextView
            android:id="@+id/text_infotani4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text=""/>

        <TextView
            android:id="@+id/text_infotani5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text=""/>

        <TextView
            android:id="@+id/text_infotani6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text=""/>

        <TextView
            android:id="@+id/text_infotani7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text=""/>


        <View
            android:layout_width="match_parent"
            android:layout_height="100dip"
            />
</LinearLayout>
</ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/background"
        app:menu="@menu/menu_navigation"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>