<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:id="@+id/infopadi">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37425A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        >

        <ImageView
            android:id="@+id/img_infopadi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="padi"
            android:src="@drawable/padi"
            tools:ignore="OnClick" />
        <View
            android:layout_width="match_parent"
            android:layout_height="15dip"
            />

        <TextView
            android:id="@+id/text_infopadi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Angka Tetap (Angka Tetap) Luas Panen dan Produksi Padi Kabupaten Madiun 2020"
            />

        <TextView
            android:id="@+id/text_infopadi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text="Kombinasi Survei Kerangka Sampel Area (KSA) dan Ubinan menghasilkan angka luas panen dan produksi padi Kabupaten Madiun"/>

        <TextView
            android:id="@+id/text_infopadi3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text="Tercatat terdapat kenaikan produksi padi tahun 2020 sebanyak 6,38 Persen dibandingkan tahun 2019"/>

        <TextView
            android:id="@+id/text_infopadi4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text="Sedangkan luas panen padi meningkat 7,33 persen. Hal ini membuktikan jika sektor pertanian yg merupakan salah satu sektor yg kuat menghadapi pandemi covid-19."/>

        <TextView
            android:id="@+id/text_infopadi5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text=""/>

        <TextView
            android:id="@+id/text_infopadi6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text=""/>

        <TextView
            android:id="@+id/text_infopadi7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text=""/>


        <View
            android:layout_width="match_parent"
            android:layout_height="100dip"
            />
    </LinearLayout>
</ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/background"
        app:menu="@menu/menu_navigation"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>