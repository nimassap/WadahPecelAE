        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="320dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:fillColor="#FFFFFFFF"
            app:pageColor="#00000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp"
            android:clickable="true"
            android:onClick="infografis"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/white"
        />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dip">
    </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/padi"
                android:id="@+id/padi"
                android:clickable="true"
                android:onClick="infopadi"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="infopadi"
                android:paddingLeft="5dp"
                android:text="Tercatat terdapat kenaikan produksi padi tahun 2020 sebanyak 6,38 persen dibandingkan tahun 2019. Sedangkan luas panen padi meningkat 7,33 persen. Hal ini membuktikan jika sektor pertanian yg merupakan salah satu sektor yg kuat menghadapi pandemi covid-19."
                android:textColor="@color/white"
                android:textSize="10sp" />
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/purple_200"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/hasil_sp2020"
                android:id="@+id/sp"
                android:clickable="true"
                android:onClick="infohasilsp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="infohasilsp"
                android:paddingLeft="5dp"
                android:text="Berdasarkan hasil Sensus Penduduk 2020, Penduduk Kabupaten Madiun paling banyak pada generasi X yaitu sebesar 24 persen dari seluruh penduduk di Kabupaten Madiun."
                android:textColor="@color/white"
                android:textSize="10sp" />
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/purple_200"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/sp2020"
                android:id="@+id/sp2020"
                android:clickable="true"
                android:onClick="infosp2020"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="infosp2020"
                android:paddingLeft="5dp"
                android:text="Berdasarkan Sensus Penduduk 2020, jumlah penduduk Kab. Madiun pada bulan September 2020 sebanyak 744.350 jiwa. Berdasarkan jenis kelamin, jumlah penduduk perempuan sedikit lebih tinggi dibanding penduduk laki-laki. Jumlah penduduk perempuan sebesar 375.442 jiwa sedangkan penduduk laki-laki sebesar 368.908 jiwa."
                android:textColor="@color/white"
                android:textSize="10sp" />
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/purple_200"
            />

<TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/luas_panen"
        android:id="@+id/infotani"
        android:clickable="true"
        android:onClick="infotani"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="infotani"
        android:paddingLeft="5dp"
        android:text="Produksi padi Kabupaten Madiun tahun 2020 tercatat 453,54 Ton GKG**, meningkat 8,17 persen dibandingkan tahun 2019. Luas panen tahun 2020 tercatat 73,86 ribu hektar meningkat 8,61 persen dibandingkan tahun 2019."
        android:textColor="@color/white"
        android:textSize="10sp" />
</TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/purple_200"
        />

    <TableRow
