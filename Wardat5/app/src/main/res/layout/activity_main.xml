        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="10sp"
            android:text="Indeks Pembanungan Manusia (IPM) Kabupaten Madiun tercatat 71,73 meningkat dibandingkan tahun 2019. IPM Kabupaten Madiun menduduki peringkat 18 se Jawa Timur, IPM Kabupaten Madiun termasuk dalam kategori tinggi."
            android:textColor="@color/white"
            android:clickable="true"
            android:onClick="infoipm"/>
    </TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/purple_200"
        />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/kemiskinan"
            android:id="@+id/infomiskin"
            android:clickable="true"
            android:onClick="infomiskin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="10sp"
            android:text="Persentase penduduk miskin Kabupaten Madiun meningkat 0,92 poin dari 10,54 persen tahun 2019 menjadi 11,46 persen di tahun 2020. Peningkatan jumlah penduduk miskin ini disebabkan salah satunya adalah kenaikan garis kemiskinan dari Rp 344.994 menjadi Rp 364.638 di tahun 2020."
            android:textColor="@color/white"
            android:clickable="true"
            android:onClick="infomiskin"/>
    </TableRow>
